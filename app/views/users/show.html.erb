 <div class="row">
        <div class="col-12">
            <div class="row ibox-content">
                <div class="col-md-6 align-items-center">
                    <div class="profile-image d-flex justify-content-center align-items-center">
                        <div class="d-flex justify-content-center">
                            <img class="m-b-md" alt="User Image" src="/assets/default-user-img-01678e88fe462e7b0c878fa8a0357fa406e9ad71a9e058023bc6025ad3a9ebca.jpg">
                        </div>
                    </div>
                    <div class="profile-info">
                        <div class="">
                            <div>
                                <h2 class="no-margins">
                                    <%=  @user.nombres %> <%=  @user.apellidos %>
                                </h2>
                                <h4>ADSI</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <table class="table m-b-xs">
                        <tbody>
                        <tr>
                            <td>
                                <strong>Número de documento:</strong> <%= @user.ndocumento %>
                            </td>
                            <td>
                                <strong>Teléfono:</strong> <%= @user.telefono %>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>E-mail:</strong> <%= @user.email %>
                            </td>
                            <td>
                                <strong>Dirección:</strong> <%= @user.direccion %>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



    <div class="row mt-3">
      <div class="w-100">
        <div class="ibox ">
          <div class="ibox-title">
              <h5>Anotaciones de <%= @user.nombres %></h5>
              <div class="ibox-tools">
                  <a class="collapse-link">
                      <i class="fa fa-chevron-up"></i>
                  </a>
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      <i class="fa fa-wrench"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-user">
                      <li><a href="#" class="dropdown-item">Config option 1</a>
                      </li>
                      <li><a href="#" class="dropdown-item">Config option 2</a>
                      </li>
                  </ul>
                  <a class="close-link">
                      <i class="fa fa-times"></i>
                  </a>
              </div>
          </div>
          <div class="ibox-content">

              <table class="table table-hover">
                  <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Descripcion</th>
                        <th>Fecha creación</th>
                    </tr>
                  </thead>
                  <tbody>


                <% @anotaciones.each do |anotacion| %>
                <tr>

                    <td>
                        <%=  anotacion.id %>
                    </td>

                    <td>
                        <%=  anotacion.descripcion %>
                    </td>

                    <td>
                        <%= anotacion.created_at%>
                    </td>

                </tr>
                <%end%>

                  </tbody>
              </table>
          </div>
      </div>
      </div>
    </div>







